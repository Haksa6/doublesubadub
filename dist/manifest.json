 {
  "manifest_version": 3,
  "name": "Doublesubadub",
  "description" : "Enhanced Netflix subtitles for foreign language study",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "run_at": "document_end",
      "js": ["content_script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page_script.js"],
      "matches": ["https://www.netflix.com/*"]}
  ]
 }
